@model LunarSFXc.ViewModels.GalleryViewModel

<div class="row">
    <div class="col-lg-12 text-center">
        <h2 class="section-heading">Thumbnail Gallery</h2>
        <h3 class="section-subheading text-muted">A few of my favorite things.</h3>
    </div>
</div>

<div class="row">
    @foreach (var image in Model.Images)
    {
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <a class="thumbnail" href="#" data-toggle="modal" data-image-id="" data-image="@image.ImageUri" data-target="#image-gallery">
                <img class="img-responsive" src="@image.ImageUri" alt="@image.FileName">
            </a>
        </div>
    }
</div>

<div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <img id="image-gallery-image" class="img-responsive" src="" />
            </div>
            <div class="modal-footer">
                <div class="col-md-2">
                    <button type="button" class="btn btn-primary" id="show-previous-image">Previous</button>
                </div>

                <div class="col-md-8 text-justify" id="image-gallery-caption">
                    
                </div>

                <div class="col-md-2">
                    <button type="button" id="show-next-image" class="btn btn-default">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>