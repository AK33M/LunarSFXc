@model LunarSFXc.ViewModels.ContactViewModel

<div class="row">
    <div class="col-lg-12 text-center">
        <h2 class="section-heading">Contact</h2>
        <h3 class="section-subheading text-muted">Please be nice!</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form method="post" id="contactForm"  asp-controller="Blog" asp-action="Contact" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="text-uppercase" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="help-block text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="text-uppercase" asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="help-block text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="text-uppercase" asp-for="Message"></label>
                        <textarea asp-for="Message" cols="40" rows="4" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="help-block text-danger"></span>
                    </div>
                </div>
            </div>           

            <div class="form-group">
                <button type="reset" class="btn btn-xl pull-right">Cancel</button>
                <button type="submit" class="btn btn-xl">Send Message</button>
            </div>
        </form>
    </div>
</div>
