@model LunarSFXc.ViewModels.LoginViewModel
@{ 
    var returnUrl = ViewBag.ReturnUrl ?? Context.Request.Query["returnUrl"].ToString();

    if(string.IsNullOrWhiteSpace(returnUrl))
    {
        returnUrl = Context.Request.Path;
    }
}

<div class="col-md-12">
    <form method="post" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@returnUrl" novalidate>
        <h4 class="text-center">Login Here!</h4>
        <hr />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Username" />
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
            <span class="text-muted help-block"><a asp-controller="Auth" asp-action="ForgotPassword">Forgot password?</a></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input type="checkbox" asp-for="RememberMe" class="pull-right" />
        </div>
        <div class="form-group text-center">
            <button class="btn btn-xl" type="submit">Submit</button>
        </div>
    </form>
    <hr />
    <div class="text-center">
        <p>
            or Login via
        </p>
    </div>
    <div>
        <ul class="list-inline text-center">
            <li>
                <a href="" title="Twitter">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
            <li>
                <a href="" title="Facebook">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
        </ul>
    </div>
    <hr />
    <div class="bottom text-center">
        <span>New here ?<a asp-controller="Auth" asp-action="Register"><b> Join Us</b></a></span>
    </div>
</div>
