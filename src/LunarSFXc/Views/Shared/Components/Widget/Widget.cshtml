@model LunarSFXc.ViewModels.WidgetViewModel

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="text-center">
        <div>
            <h3>CATEGORIES</h3>
            @foreach (var cat in Model.Categories)
            {
                <category for-category="cat"></category>
            }
        </div>
        <div class="widgetTags">
            <h3>TAGS</h3>
            <tags tags for-tags="Model.Tags"></tags>
        </div>
        <div>
            <h3>LATEST POSTS</h3>
            @foreach (var post in Model.LastestPosts)
            {
                <post for-post="post"></post>
            }
        </div>
    </div>
</div> 