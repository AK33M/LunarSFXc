@model LunarSFXc.ViewModels.WidgetViewModel

<div class="row">
    <div class="col-lg-12 text-center">
        <h2 class="section-heading">LATEST POSTS</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
    </div>
</div>
<div class="row">
    <div class="container">
        @foreach (var post in Model.LastestPosts)
        {
            @Html.Partial("_PostTemplate", post)
        }
    </div>
</div>
<div class="row">
    <a asp-controller="Blog" asp-action="Posts" class="btn btn-xl">See More</a>
</div>
<div class="row">
    <h5>Explore CATEGORIES</h5>
    <ul class="list-inline">
        @foreach (var cat in Model.Categories)
        {
            <li><category for-category="cat"></category></li>
        }
    </ul>
</div>
<div class="row">
    <div class="widgetTags">
        <h5>Explore TAGS</h5>
        <tags tags for-tags="Model.Tags"></tags>
    </div>
</div>

