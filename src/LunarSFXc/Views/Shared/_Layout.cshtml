<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom Fonts-->
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

    <!-- Theme CSS-->
    <link rel="stylesheet" type="text/css" href="~/lib/agency-template/css/agency.min.css" />

    <!-- Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link type="text/css" href="~/css/login.css" rel="stylesheet" />
</head>

<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">LunarSFX</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        @*<li>
                                <a asp-controller="Auth" asp-action="Login">Login</a>
                            </li>*@

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login</a>
                            <ul id="login-dp" class="dropdown-menu">
                                <li>
                                    @Component.InvokeAsync("Login").Result
                                </li>
                            </ul>

                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="#">Hello, <span class="text-primary">@User.Identity.Name</span></a>
                        </li>

                        <li>
                            <a asp-controller="Auth" asp-action="Logout">Log out</a>
                        </li>
                    }

                    <li>
                        <a class="page-scroll" href="#about">About</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact">Contact</a>
                    </li>
                    <li><a>@Html.Partial("_Search")</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header>
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">LunarSFX</div>
                <div class="intro-heading">Software Developer, Human &amp; Technophobe</div>
                <a href="#services" class="page-scroll btn btn-xl">Tell Me More</a>
            </div>
        </div>
    </header>


    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            @RenderBody()
            @Component.InvokeAsync("Widget").Result
        </div>
    </div>


    <!-- Sections -->
    <!-- Contact Us Section -->
    <section id="contact">
        <div class="container">
            @Component.InvokeAsync("Contact").Result
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright text-muted">Copyright &copy; @DateTime.Now.Year LunarSFX All Rights Reserved</span>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline social-buttons">
                        <li><a href="https://twitter.com/LunarSFX" target="_blank"><i class="fa fa-twitter"></i></a></li>
                        <li></li>
                        <li><a href=""><i class="fa fa-facebook"></i></a></li>
                        <li></li>
                        <li><a href="https://github.com/AK33M/LunarSFXc" target="_blank"><i class="fa fa-github"></i></a></li>
                        <li></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline quicklinks">
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Use</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- jQuery Validation-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- Bootstrap Core Js-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme Js-->
    <script src="~/lib/agency-template/js/agency.min.js"></script>

    <!-- Custom Js-->
    <script src="~/js/app.js"></script>


    @RenderSection("scripts", false)
</body>
</html>