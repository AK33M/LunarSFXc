@model LunarSFXc.ViewModels.ListViewModel

@{
    Layout = "_BlogLayout";
}

<section id="blog-list">
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="col-lg-8">
                @if (Model.Posts.Count > 0)
                {
                    foreach (var post in Model.Posts)
                    {
                        @Html.Partial("_PostTemplate", post)
                    }
                }
                else
                {
                    <p>No posts found!</p>
                }
                @Html.Partial("_Pager", Model)
            </div>
            <div class="col-lg-4">
                <!-- Blog Categories Well -->
                <div class="well">
                    @Component.InvokeAsync("Widget", new { sidebar = true }).Result
                </div>
            </div>
        </div>
    </div>
</section>
