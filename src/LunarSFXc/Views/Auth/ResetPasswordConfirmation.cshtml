@{
    ViewData["Title"] = "Reset password confirmation";
}

@{
    Layout = "_BlogLayout";
}

<section id="forgotPasswordConfirmation">
    <div class="container">
        <div class="col-md-8 col-md-offset-2">
            <h4>@ViewData["Title"].</h4>
            <hr />
            <p>
                Your password has been reset. Please <a asp-controller="Auth" asp-action="Login">Click here to log in</a>.
            </p>
        </div>
    </div>
</section>