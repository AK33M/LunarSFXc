@model LunarSFXc.ViewModels.RegisterViewModel
@{
    Layout = "_BlogLayout";
}

@{ 
    ViewBag.Title = "New User";
}

<section>
    <div class="container">
        <div class="col-lg-8 col-lg-offset-2">
            <h3 class="page-header">Welcome, fresh meat!</h3>
            <form asp-controller="Auth" asp-action="Register" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Username" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="FirstWords"></label>
                        <textarea asp-for="FirstWords" class="form-control" placeholder="Famous First Words"></textarea>
                        <span class="text-danger" asp-validation-for="FirstWords"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <button class="btn btn-primary btn-xl" type="submit">Submit</button>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group pull-right">
                        <a asp-controller="Blog" asp-action="Posts" class="btn btn-primary btn-xl">Cancel</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</section>