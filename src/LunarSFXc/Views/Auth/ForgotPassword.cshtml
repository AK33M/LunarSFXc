@model LunarSFXc.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot your password?";
}

@{ 
    Layout = "_BlogLayout";
}
<section id="forgotPassword">
    <div class="container">
        <div class="col-md-8 col-md-offset-2">
            <form asp-controller="Auth" asp-action="ForgotPassword" method="post" class="form-horizontal">
                <div class="text-center">
                    <h4>Forgot your password, did you?</h4>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input asp-for="Email" class="form-control" placeholder="Enter your email." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <button type="submit" class="btn btn-xl">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>